{
  "manifest_version": 3,
  "name": "JSON Hero",
  "description": "Easily send JSON to JSON Hero",
  "version": "1.0.0",
  "author": "Eric Allam",
  "options_page": "options.html",
  "background": {
    "service_worker": "build/background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon-16.png",
      "24": "icon-24.png",
      "32": "icon-32.png"
    }
  },
  "icons": {
    "512": "icon-512.png",
    "128": "icon-128.png",
    "48": "icon-48.png",
    "32": "icon-32.png",
    "16": "icon-16.png"
  },
  "permissions": [
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "js": [
        "build/content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [],
      "matches": []
    }
  ]
}